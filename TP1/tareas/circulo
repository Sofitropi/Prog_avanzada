#include <iostream>

using namespace std;

class circulo{
    int radio;
 //el constructor le "asigna" el radio de la class, inicializa la varible para las funciones de abajo//
    public:
    circulo ( int radio){
    this->radio=radio;
    }
    
    int areac(){
        int a;
        a= (radio*radio)*3.1416;
        return a;
    }
    int perimetro(){
        int p;
        p= 2*3.14*radio;
        return p;
    }
    int diametro (){
        int d;
        d=radio*2;
        return d; 
    }
    
};

